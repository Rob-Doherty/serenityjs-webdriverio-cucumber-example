{
  "name": "serenityjs-example",
  "version": "1.0.0",
  "description": "Example usage of SerenityJS test framework",
  "main": "index.js",
  "scripts": {
    "test": "export TEST_RUN_TIMESTAMP=\"$(date +\"%y%m%d-%H%M%S\")\" && yarn test:execute && yarn test:report",
    "test:execute": "wdio wdio.conf.ts",
    "test:report": "serenity-bdd run --source=\"target/site/serenity/\"$(echo $TEST_RUN_TIMESTAMP)\"\" --destination=\"target/site/serenity/\"$(echo $TEST_RUN_TIMESTAMP)\"\"",
    "test:pipeline": "yarn test:execute && yarn test:report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rob-Doherty/serenityjs-example.git"
  },
  "author": "Rob Doherty-Kelly",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Rob-Doherty/serenityjs-example/issues"
  },
  "homepage": "https://github.com/Rob-Doherty/serenityjs-example#readme",
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@serenity-js/console-reporter": "^3.31.15",
    "@serenity-js/core": "^3.31.15",
    "@serenity-js/cucumber": "^3.31.15",
    "@serenity-js/serenity-bdd": "^3.31.15",
    "@serenity-js/webdriverio": "^3.31.15",
    "@types/node": "^22.15.21",
    "@wdio/cli": "^9.14.0",
    "@wdio/cucumber-framework": "^9.14.0",
    "@wdio/globals": "^9.14.0",
    "@wdio/local-runner": "^9.14.0",
    "@wdio/reporter": "^9.14.0",
    "@wdio/spec-reporter": "^9.14.0",
    "@wdio/types": "^9.14.0",
    "chromedriver": "^136.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "wdio-chromedriver-service": "^8.1.1",
    "webdriverio": "^9.14.0"
  }
}
